generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id       String          @id @default(cuid()) @map("_id")
  name     String
  price    Float
  stock    Int
  category ProductCategory
}

model Tool {
  id       String   @id @default(cuid()) @map("_id")
  toolType ToolType
}

model Grocery {
  id             String      @id @default(cuid()) @map("_id")
  groceryType    GroceryType
  expirationDate DateTime
}

model User {
  id       String   @id @default(cuid()) @map("_id")
  email    String   @unique
  password String
  name     String
  role     UserRole
}

enum ProductCategory {
  OUTFITS
  GROCERIES
  TOOLS
}

enum ToolType {
  HAND_TOOL
  POWER_TOOL
}

enum GroceryType {
  BEVERAGE
  BAKED_GOOD
  CANNED_GOOD
  DAIRY
  BAKING_GOOD
  FROZEN_GOOD
  MEATS
}

enum UserRole {
  PRODUCTS_SELLLER
  CUSTOMER_SERVICE
  CUSTOMER
}
